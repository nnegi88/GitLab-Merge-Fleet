{
  "name": "gitlab-merge-fleet",
  "version": "0.1.0",
  "description": "A modern GitLab multi-repository merge request management tool with AI-powered code reviews",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build && npx gh-pages -d dist",
    "test": "npm run test:unit && npm run test:component",
    "test:unit": "vitest run --coverage=false tests/unit",
    "test:component": "vitest run --coverage=false tests/component",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@sentry/vue": "^7.108.0",
    "@tanstack/vue-query": "^5.28.14",
    "axios": "^1.6.8",
    "lucide-vue-next": "^0.330.0",
    "marked": "^15.0.12",
    "pinia": "^2.1.7",
    "vue": "^3.3.13",
    "vue-router": "^4.2.5",
    "vuetify": "^3.8.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitest/ui": "^1.3.1",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^16.2.0",
    "happy-dom": "^13.3.8",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^4.5.3",
    "vite-plugin-vuetify": "^2.1.1",
    "vitest": "^1.3.1"
  }
}
